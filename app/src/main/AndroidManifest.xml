<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.momscare">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MomsCare">

        <activity android:name=".WelcomeIntaface" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ToDo_List.SignIn"
            android:label="Sign In">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ToDo_List.BMI"
            android:label="BMI" />
        <activity
            android:name=".ToDo_List.SignUp"
            android:label="Sign Up" /> <!-- Start of ToDO List -->
        <activity
            android:name=".MainActivity"
            android:label=""
            android:parentActivityName=".ToDo_List.SignIn" />
        <activity
            android:name=".Workout.WorkOuts"
            android:label="WorkOut Packages" />


        <!-- Start of Workout management -->
        <activity
            android:name="com.example.momscare.Workout.ViewExerciseImage"
            android:label="WorkOut Image"
            android:parentActivityName="com.example.momscare.Workout.ModifyExercise" />
        <activity
            android:name="com.example.momscare.Workout.ImageUpload"
            android:label="Upload WorkOut Image"
            android:parentActivityName="com.example.momscare.Workout.AddExercise" />
        <activity
            android:name="com.example.momscare.Workout.AllExercises"
            android:label="WorkOuts Listing"
            android:parentActivityName="com.example.momscare.Workout.WorkoutDashBoard" />
        <activity
            android:name="com.example.momscare.Workout.ViewExercise"
            android:label="Exercise"
            android:parentActivityName="com.example.momscare.Workout.WorkOuts" />
        <activity
            android:name="com.example.momscare.Workout.ModifyExercise"
            android:label="Modify Exercise"
            android:parentActivityName="com.example.momscare.Workout.AllExercises" />
        <activity
            android:name="com.example.momscare.Workout.WeightConverter"
            android:label="Weight Converter"
            android:parentActivityName="com.example.momscare.Workout.WorkoutDashBoard" />
        <activity
            android:name="com.example.momscare.Workout.Counter"
            android:label="Count Down Timer"
            android:parentActivityName="com.example.momscare.Workout.WorkOuts" />
        <activity
            android:name="com.example.momscare.Workout.AddExercise"
            android:label="Add Exercise"
            android:parentActivityName="com.example.momscare.Workout.WorkoutDashBoard" />
        <activity
            android:name="com.example.momscare.Workout.WorkoutDashBoard"
            android:label="WorkOut DashBoard" />

    </application>

</manifest>