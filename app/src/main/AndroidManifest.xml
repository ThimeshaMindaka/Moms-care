            android:name="com.example.momscare.Nutrition.AddMacros"
            android:label="Add new Macro record"
            android:parentActivityName="com.example.momscare.Nutrition.macros" />
        <activity
            android:name="com.example.momscare.Nutrition.MealList"
            android:label="Added Meal Plans"
            android:parentActivityName="com.example.momscare.Nutrition.NutritionNavigate" />
        <activity
            android:name="com.example.momscare.Nutrition.ViewMeals"
            android:label="Meal Plans"
            android:parentActivityName="com.example.momscare.MainActivity" />

  </application>

