<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.momscare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MomsCare"
        android:largeHeap="true"
        android:hardwareAccelerated="false">
        <activity android:name=".Workout.WorkOuts"></activity>
        <activity android:name=".Workout.WeightConverter" />
        <activity android:name=".ToDo_List.SignUp" />
        <activity android:name=".ToDo_List.SignIn" />
        <activity android:name=".WelcomeIntaface" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Start of ToDO List -->

        <activity
            android:name=".ToDo_List.BMI"
            android:label="BMI" />


      <activity
          android:name="com.example.momscare.MainActivity"
          android:label="To Do List"
          android:parentActivityName="com.example.momscare.ToDo_List.SignIn">
      </activity>
        <!-- Start of Work Out -->

        <!--nuti-->
        <!-- Start of Nutrition management -->
        <activity android:name="com.example.momscare.Nutrition.NutritionNavigate" />
        <activity
            android:name="com.example.momscare.Nutrition.user_meal_view"
            android:label="Meal Plan Details"
            android:parentActivityName="com.example.momscare.Nutrition.ViewMeals"></activity>

        <activity
            android:name="com.example.momscare.Nutrition.macroCal"
            android:label="Macro Finder"
            android:parentActivityName="com.example.momscare.MainActivity" />
        <activity
            android:name="com.example.momscare.Nutrition.macros"
            android:label="Added Macros"
            android:parentActivityName="com.example.momscare.Nutrition.NutritionNavigate" />
        <activity
            android:name="com.example.momscare.Nutrition.AddMeal"
            android:label="Add a Meal"
            android:parentActivityName="com.example.momscare.Nutrition.NutritionNavigate" />
